---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";
import landingImgProfile from "../assets/portfolioImg-Photoroom.png";
import patternBg from "../assets/wallpaper.jpg";
---

<Layout>
  <section id="home-page">
    <article
      id="main-top"
      class="relative flex justify-between px-6 md:px-14 h-[70vh]"
    >
      <div
        class="absolute bg-size-[14rem] inset-0 bg-[url('../assets/wallpaper.jpg')] bg-center opacity-16 z-0"
      >
      </div>

      <aside id="main-content-left" class="relative z-10 mt-32">
        <h2 class="text-4xl">Hey I'm</h2>
        <h1 class="text-6xl">Level Lawrence</h1>
        <h3 class="text-3xl font-bold">Full Stack Developer</h3>
        <div class="text-white mt-8">
          <button class="bg-gray-800 px-2 py-1 rounded mr-4">My Work</button>
          <button class="bg-red-700 px-2 py-1 rounded">Hire Me</button>
        </div>
      </aside>

      <aside id="main-content-right" class="relative z-10">
        <div class="relative z-10">
          <div
            id="bg-circle"
            class="bg-[#f0e7e8] h-92 w-92 rounded-full blur-lg absolute z-10 right-0 top-20"
          >
          </div>
          <div class="z-[80] absolute right-[-10rem] top-6 w-[40rem]">
            <Image src={landingImgProfile} alt="landing profile" format="png" />
          </div>
        </div>
      </aside>
    </article>
  </section>
  <article id="main-bottom" class="h-[20vh]">
    <aside class="bg-[#1A1F3A] h-[100%]">
      <h4>Skills</h4>
    </aside>
  </article>
</Layout>
